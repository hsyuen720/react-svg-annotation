{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "files": ["src/index.ts"]
}
